{
  "name": "vintage-revolution-pedalpro-editor",
  "description": "Vintage Revolution PedalPro Preset Editor",
  "version": "0.1.0",
  "author": {
    "email": "obiwanjacobi@hotmail.com",
    "name": "Jacobi Software",
    "url": "https://www.vintage-revolution.com"
  },
  "main": "./app/program.js",
  "private": true,
  "dependencies": {
    "express": "^4.16.2",
    "material-ui": "^1.0.0-beta.30",
    "material-ui-icons": "^1.0.0-beta.17",
    "morgan": "^1.9.0",
    "node-hid": "^0.7.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-virtualized": "^9.18.5",
    "redux": "^3.7.2",
    "typed-rest-client": "^1.0.5",
    "typeface-roboto": "^0.0.54"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/jest": "^22.1.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.3.0",
    "@types/node-hid": "^0.5.2",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.35",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/react-virtualized": "^9.7.10",
    "electron": "^1.8.1",
    "electron-builder": "^19.55.3",
    "electron-rebuild": "^1.7.3",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.1",
    "ts-loader": "^3.3.1",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.4.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "windows-build-tools": "^1.3.2"
  },
  "scripts": {
    "build": "webpack --config webpack.dev.config.js",
    "build:w": "webpack -w --config webpack.dev.config.js",
    "build:prod": "webpack --config webpack.prod.config.js",
    "test": "SET ELECTRON_RUN_AS_NODE=true ./node_modules/.bin/electron ./node_modules/.bin/jest",
    "test-w": "SET ELECTRON_RUN_AS_NODE=true ./node_modules/.bin/electron ./node_modules/.bin/jest --watchAll",
    "start": "electron .",
    "postinstall": "tsc && electron-rebuild --force",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "build": {
    "appId": "js.pedalpro.editor",
    "mac": {
      "category": "public.app.category.productivity"
    },
    "copyright": "Copyright 2018 Jacobi Software",
    "productName": "Vintage Revolution PedalPro Preset Editor",
    "asar": "true",
    "files": [
      "./app/**/*.js",
      "./app/**/*.json",
      "./app/**/*.css",
      "./app/**/*.html",
      "./src/**/*.css",
      "./src/**/*.html",
      "./assets/**/*.*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}

{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "app",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "pretty": true,
    "sourceMap": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
  },
  "exclude": [
    "node_modules",
    "app",
    "dist",
    "release",
    "src/**/_tests/*"
  ],
}
